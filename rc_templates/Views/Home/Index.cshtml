@model List<TXTextControl.ReportingCloud.Template>

@{
    ViewData["Title"] = "Manage Templates";
}

<script src="https://portal.reporting.cloud/Widget/Script/***your widget key here***"></script>

<div class="row">
    <div class="col-md-3 scrolldiv">
        <table class="table table-hover templates">
            <thead>
                <tr>
                    <td><strong>Template Name</strong></td>
                    <td><strong>Size</strong></td>
                    <td><strong>Modified</strong></td>
                    <td>&nbsp;</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var template in Model)
                {
                    <tr>
                        <td><a onclick="LoadDocument('@template.TemplateName')">@template.TemplateName</a></td>
                        <td class="text-right"><small>@(template.Size / 1024)&nbsp;KB</small></td>
                        <td class="text-right"><small>@String.Format("{0:d}", template.Modified)</small></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-9">

        <h3 id="documentName">&nbsp;</h3>

        <div id="myWidgetContainer"></div>

        <button disabled id="saveBtn" class="btn btn-default" onclick="SaveDocument()">Save Template</button>

    </div>
</div>
